<Window x:Class="BitCuratorWIN.ErrorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Errors" SizeToContent="WidthandHeight" ResizeMode="CanMinimize"
        WindowStartupLocation="CenterScreen">
    <Grid x:Name="MainGrid">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" MaxWidth="1600"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" MaxHeight="600"/>
            <RowDefinition Height="40"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
        </Grid>
        <Button x:Name="ShowLogFile" Content="Open Log Files" HorizontalAlignment="Center" Margin="0,0,140,0" VerticalAlignment="Center" Grid.Row="2" Grid.Column="0" Width="105" Height="24" Click="OpenLogFiles" />
        <Button x:Name="ErrorDetails" Content="Diplay Log Errors" HorizontalAlignment="Center" Margin="140,0,0,0" VerticalAlignment="Center" Grid.Row="2" Grid.Column="1" Width="105" Height="24" Click="DisplayLogErrors" />
    </Grid>
</Window>